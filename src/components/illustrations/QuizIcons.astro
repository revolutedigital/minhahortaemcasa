---
// Icones SVG para o Quiz
interface Props {
  type: 'sun-low' | 'sun-partial' | 'sun-full' | 'water-forget' | 'water-ok' | 'water-daily' | 'food-pasta' | 'food-rice' | 'food-tea' | 'result';
  size?: string;
}

const { type, size = 'w-12 h-12' } = Astro.props;
---

{type === 'sun-low' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Sol parcialmente coberto por nuvem -->
    <circle cx="20" cy="20" r="8" fill="#fde047"/>
    <g stroke="#facc15" stroke-width="2" stroke-linecap="round">
      <line x1="20" y1="6" x2="20" y2="9"/>
      <line x1="8" y1="20" x2="11" y2="20"/>
      <line x1="10" y1="10" x2="12" y2="12"/>
    </g>
    <!-- Nuvem na frente -->
    <path d="M16 28C12 28 10 32 12 36C8 36 6 40 10 44H38C44 44 44 38 40 36C42 32 38 28 34 28C32 24 26 24 24 28C22 26 18 26 16 28Z" fill="#e5e7eb" stroke="#d1d5db" stroke-width="1.5"/>
  </svg>
)}

{type === 'sun-partial' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Sol com nuvem pequena -->
    <circle cx="24" cy="20" r="10" fill="#fde047"/>
    <g stroke="#facc15" stroke-width="2" stroke-linecap="round">
      <line x1="24" y1="4" x2="24" y2="8"/>
      <line x1="24" y1="32" x2="24" y2="36"/>
      <line x1="8" y1="20" x2="12" y2="20"/>
      <line x1="36" y1="20" x2="40" y2="20"/>
      <line x1="12" y1="8" x2="15" y2="11"/>
      <line x1="33" y1="29" x2="36" y2="32"/>
      <line x1="12" y1="32" x2="15" y2="29"/>
      <line x1="33" y1="11" x2="36" y2="8"/>
    </g>
    <!-- Pequena nuvem -->
    <path d="M32 36C30 34 26 34 24 36C22 34 18 34 16 36C14 38 16 42 20 42H32C36 42 38 38 36 36C36 36 34 34 32 36Z" fill="#f3f4f6" stroke="#e5e7eb" stroke-width="1"/>
  </svg>
)}

{type === 'sun-full' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Sol pleno brilhante -->
    <circle cx="24" cy="24" r="10" fill="url(#sunGrad)"/>
    <g stroke="#facc15" stroke-width="2.5" stroke-linecap="round">
      <line x1="24" y1="4" x2="24" y2="10"/>
      <line x1="24" y1="38" x2="24" y2="44"/>
      <line x1="4" y1="24" x2="10" y2="24"/>
      <line x1="38" y1="24" x2="44" y2="24"/>
      <line x1="9" y1="9" x2="13" y2="13"/>
      <line x1="35" y1="35" x2="39" y2="39"/>
      <line x1="9" y1="39" x2="13" y2="35"/>
      <line x1="35" y1="13" x2="39" y2="9"/>
    </g>
    <defs>
      <radialGradient id="sunGrad">
        <stop offset="0%" stop-color="#fef08a"/>
        <stop offset="100%" stop-color="#facc15"/>
      </radialGradient>
    </defs>
  </svg>
)}

{type === 'water-forget' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Gota com cara preocupada -->
    <path d="M24 6C24 6 10 18 10 30C10 38 16 44 24 44C32 44 38 38 38 30C38 18 24 6 24 6Z" fill="#bae6fd" stroke="#0ea5e9" stroke-width="2"/>
    <ellipse cx="20" cy="24" rx="2" ry="3" fill="#0369a1"/>
    <ellipse cx="28" cy="24" rx="2" ry="3" fill="#0369a1"/>
    <path d="M19 32C19 32 24 30 29 32" stroke="#0369a1" stroke-width="2" stroke-linecap="round"/>
    <!-- Gotas de suor -->
    <path d="M36 16L38 20L40 16" stroke="#7dd3fc" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}

{type === 'water-ok' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Gota com polegar pra cima -->
    <path d="M24 6C24 6 10 18 10 30C10 38 16 44 24 44C32 44 38 38 38 30C38 18 24 6 24 6Z" fill="#7dd3fc" stroke="#0ea5e9" stroke-width="2"/>
    <ellipse cx="20" cy="26" rx="2" ry="2" fill="#0369a1"/>
    <ellipse cx="28" cy="26" rx="2" ry="2" fill="#0369a1"/>
    <path d="M20 33C20 33 24 36 28 33" stroke="#0369a1" stroke-width="2" stroke-linecap="round"/>
    <!-- Brilho -->
    <ellipse cx="17" cy="22" rx="3" ry="4" fill="white" fill-opacity="0.4"/>
  </svg>
)}

{type === 'water-daily' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Gota feliz com estrela -->
    <path d="M24 6C24 6 10 18 10 30C10 38 16 44 24 44C32 44 38 38 38 30C38 18 24 6 24 6Z" fill="#38bdf8" stroke="#0ea5e9" stroke-width="2"/>
    <ellipse cx="19" cy="26" rx="2" ry="2" fill="#0369a1"/>
    <ellipse cx="29" cy="26" rx="2" ry="2" fill="#0369a1"/>
    <path d="M19 33C19 33 24 38 29 33" stroke="#0369a1" stroke-width="2" stroke-linecap="round"/>
    <!-- Estrela -->
    <path d="M38 10L39 13L42 13L40 15L41 18L38 16L35 18L36 15L34 13L37 13L38 10Z" fill="#facc15"/>
    <!-- Brilho -->
    <ellipse cx="16" cy="22" rx="3" ry="4" fill="white" fill-opacity="0.5"/>
  </svg>
)}

{type === 'food-pasta' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Prato de massa -->
    <ellipse cx="24" cy="36" rx="18" ry="6" fill="#f5f5f5" stroke="#d1d5db" stroke-width="1.5"/>
    <!-- Espaguete -->
    <path d="M12 30C12 30 16 20 24 20C32 20 36 30 36 30" stroke="#fde047" stroke-width="3" stroke-linecap="round"/>
    <path d="M14 28C14 28 18 22 24 22C30 22 34 28 34 28" stroke="#facc15" stroke-width="3" stroke-linecap="round"/>
    <path d="M16 26C16 26 20 24 24 24C28 24 32 26 32 26" stroke="#fde047" stroke-width="3" stroke-linecap="round"/>
    <!-- Molho -->
    <ellipse cx="24" cy="24" rx="6" ry="4" fill="#ef4444" fill-opacity="0.8"/>
    <!-- Folha de manjericao -->
    <ellipse cx="26" cy="22" rx="3" ry="2" fill="#22c55e" transform="rotate(-20 26 22)"/>
  </svg>
)}

{type === 'food-rice' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Prato -->
    <ellipse cx="24" cy="38" rx="16" ry="5" fill="#f5f5f5" stroke="#d1d5db" stroke-width="1.5"/>
    <!-- Arroz -->
    <ellipse cx="16" cy="30" rx="8" ry="6" fill="#fef9c3" stroke="#fde047" stroke-width="1"/>
    <!-- Feijao -->
    <ellipse cx="32" cy="30" rx="8" ry="6" fill="#92400e" stroke="#78350f" stroke-width="1"/>
    <!-- Graozinhos de arroz -->
    <ellipse cx="14" cy="28" rx="1.5" ry="1" fill="white"/>
    <ellipse cx="18" cy="30" rx="1.5" ry="1" fill="white"/>
    <ellipse cx="15" cy="32" rx="1.5" ry="1" fill="white"/>
    <!-- Feijoes -->
    <ellipse cx="30" cy="28" rx="2" ry="1.5" fill="#7c2d12"/>
    <ellipse cx="34" cy="30" rx="2" ry="1.5" fill="#7c2d12"/>
    <!-- Cebolinhas picadas -->
    <line x1="20" y1="26" x2="22" y2="26" stroke="#22c55e" stroke-width="1.5"/>
    <line x1="24" y1="25" x2="26" y2="25" stroke="#22c55e" stroke-width="1.5"/>
  </svg>
)}

{type === 'food-tea' && (
  <svg class={size} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Xicara -->
    <path d="M10 20H32V36C32 40 28 44 21 44C14 44 10 40 10 36V20Z" fill="#f0fdf4" stroke="#22c55e" stroke-width="2"/>
    <!-- Alca -->
    <path d="M32 24C36 24 40 28 40 32C40 36 36 40 32 40" stroke="#22c55e" stroke-width="2" fill="none"/>
    <!-- Liquido -->
    <path d="M12 24H30V34C30 38 26 40 21 40C16 40 12 38 12 34V24Z" fill="#86efac" fill-opacity="0.5"/>
    <!-- Vapor -->
    <path d="M16 14C16 14 18 10 16 6" stroke="#d1d5db" stroke-width="1.5" stroke-linecap="round"/>
    <path d="M21 12C21 12 23 8 21 4" stroke="#d1d5db" stroke-width="1.5" stroke-linecap="round"/>
    <path d="M26 14C26 14 28 10 26 6" stroke="#d1d5db" stroke-width="1.5" stroke-linecap="round"/>
    <!-- Folhinha flutuando -->
    <ellipse cx="20" cy="28" rx="3" ry="1.5" fill="#22c55e" transform="rotate(-15 20 28)"/>
  </svg>
)}

{type === 'result' && (
  <svg class={size} viewBox="0 0 96 96" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Circulo de fundo -->
    <circle cx="48" cy="48" r="44" fill="url(#resultBg)" stroke="#22c55e" stroke-width="3"/>
    <!-- Planta -->
    <path d="M48 72V44" stroke="#15803d" stroke-width="4" stroke-linecap="round"/>
    <!-- Folhas -->
    <path d="M48 56C48 56 32 50 28 36C36 36 48 44 48 56Z" fill="#22c55e" stroke="#15803d" stroke-width="2"/>
    <path d="M48 48C48 48 64 42 68 28C60 28 48 36 48 48Z" fill="#4ade80" stroke="#15803d" stroke-width="2"/>
    <path d="M48 44C48 44 38 34 38 24C44 24 48 34 48 44Z" fill="#86efac" stroke="#15803d" stroke-width="2"/>
    <path d="M48 44C48 44 58 34 58 24C52 24 48 34 48 44Z" fill="#bbf7d0" stroke="#15803d" stroke-width="2"/>
    <!-- Vaso -->
    <path d="M38 72H58L55 84H41L38 72Z" fill="#ea7531" stroke="#b5441c" stroke-width="2"/>
    <path d="M36 70H60V74H36V70Z" fill="#db5a21" stroke="#b5441c" stroke-width="2" rx="2"/>
    <!-- Brilhos/Sparkles -->
    <circle cx="20" cy="24" r="2" fill="#fde047"/>
    <circle cx="76" cy="20" r="3" fill="#fde047"/>
    <circle cx="80" cy="60" r="2" fill="#fde047"/>
    <circle cx="16" cy="56" r="2" fill="#fde047"/>
    <defs>
      <radialGradient id="resultBg">
        <stop offset="0%" stop-color="#dcfce7"/>
        <stop offset="100%" stop-color="#f0fdf4"/>
      </radialGradient>
    </defs>
  </svg>
)}
