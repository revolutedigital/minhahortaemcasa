---
// Icones SVG para usar nos cards de plantas
interface Props {
  type: 'manjericao' | 'alecrim' | 'hortela' | 'cebolinha' | 'salsinha' | 'generic';
  size?: 'sm' | 'md' | 'lg';
}

const { type, size = 'md' } = Astro.props;

const sizes = {
  sm: 'w-8 h-8',
  md: 'w-12 h-12',
  lg: 'w-16 h-16'
};
---

{type === 'manjericao' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Manjericao - folhas arredondadas em pares -->
    <path d="M32 56V28" stroke="#15803d" stroke-width="3" stroke-linecap="round"/>
    <!-- Par de folhas inferior -->
    <ellipse cx="22" cy="40" rx="10" ry="8" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <ellipse cx="42" cy="40" rx="10" ry="8" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <!-- Par de folhas medio -->
    <ellipse cx="20" cy="28" rx="9" ry="7" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <ellipse cx="44" cy="28" rx="9" ry="7" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <!-- Par de folhas superior -->
    <ellipse cx="24" cy="18" rx="7" ry="5" fill="#86efac" stroke="#15803d" stroke-width="1.5"/>
    <ellipse cx="40" cy="18" rx="7" ry="5" fill="#86efac" stroke="#15803d" stroke-width="1.5"/>
    <!-- Folha topo -->
    <ellipse cx="32" cy="12" rx="5" ry="6" fill="#bbf7d0" stroke="#15803d" stroke-width="1.5"/>
  </svg>
)}

{type === 'alecrim' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Alecrim - folhas finas e alongadas -->
    <path d="M32 56V16" stroke="#15803d" stroke-width="2.5" stroke-linecap="round"/>
    <!-- Folhas lado esquerdo -->
    <path d="M32 48L18 44" stroke="#22c55e" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 40L16 34" stroke="#22c55e" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 32L18 26" stroke="#4ade80" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 24L20 20" stroke="#4ade80" stroke-width="2.5" stroke-linecap="round"/>
    <!-- Folhas lado direito -->
    <path d="M32 46L46 42" stroke="#22c55e" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 38L48 32" stroke="#22c55e" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 30L46 24" stroke="#4ade80" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 22L44 18" stroke="#86efac" stroke-width="2.5" stroke-linecap="round"/>
    <!-- Topo -->
    <path d="M32 16L32 10" stroke="#86efac" stroke-width="2" stroke-linecap="round"/>
    <path d="M32 12L28 8" stroke="#bbf7d0" stroke-width="2" stroke-linecap="round"/>
    <path d="M32 12L36 8" stroke="#bbf7d0" stroke-width="2" stroke-linecap="round"/>
  </svg>
)}

{type === 'hortela' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Hortela - folhas serrilhadas -->
    <path d="M32 56V24" stroke="#15803d" stroke-width="3" stroke-linecap="round"/>
    <!-- Folha grande esquerda com serrilhado -->
    <path d="M32 36C32 36 16 32 12 20C16 20 28 24 32 36Z" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <path d="M18 26L20 28M22 24L24 26M26 28L28 30" stroke="#15803d" stroke-width="1" stroke-opacity="0.5"/>
    <!-- Folha grande direita -->
    <path d="M32 32C32 32 48 28 52 16C48 16 36 20 32 32Z" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <path d="M46 22L44 24M42 20L40 22M38 24L36 26" stroke="#15803d" stroke-width="1" stroke-opacity="0.5"/>
    <!-- Folhas menores topo -->
    <path d="M32 24C32 24 22 20 20 12C24 12 30 16 32 24Z" fill="#86efac" stroke="#15803d" stroke-width="1.5"/>
    <path d="M32 24C32 24 42 20 44 12C40 12 34 16 32 24Z" fill="#bbf7d0" stroke="#15803d" stroke-width="1.5"/>
  </svg>
)}

{type === 'cebolinha' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Cebolinha - folhas tubulares longas -->
    <ellipse cx="32" cy="54" rx="12" ry="4" fill="#f5f5dc" stroke="#15803d" stroke-width="1.5"/>
    <!-- Folhas -->
    <path d="M26 52C26 52 22 40 20 12" stroke="#22c55e" stroke-width="3" stroke-linecap="round"/>
    <path d="M30 52C30 52 28 38 26 8" stroke="#4ade80" stroke-width="3.5" stroke-linecap="round"/>
    <path d="M34 52C34 52 36 36 38 6" stroke="#22c55e" stroke-width="3.5" stroke-linecap="round"/>
    <path d="M38 52C38 52 42 42 46 14" stroke="#4ade80" stroke-width="3" stroke-linecap="round"/>
    <!-- Bulbo na base -->
    <ellipse cx="32" cy="56" rx="8" ry="3" fill="#f5f5dc" stroke="#a3a389" stroke-width="1"/>
  </svg>
)}

{type === 'salsinha' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Salsinha - folhas tripartidas -->
    <path d="M32 56V32" stroke="#15803d" stroke-width="2.5" stroke-linecap="round"/>
    <!-- Ramo esquerdo -->
    <path d="M32 40L22 34" stroke="#15803d" stroke-width="2" stroke-linecap="round"/>
    <circle cx="16" cy="30" r="5" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <circle cx="22" cy="26" r="4" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <circle cx="18" cy="22" r="3" fill="#86efac" stroke="#15803d" stroke-width="1"/>
    <!-- Ramo direito -->
    <path d="M32 40L42 34" stroke="#15803d" stroke-width="2" stroke-linecap="round"/>
    <circle cx="48" cy="30" r="5" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <circle cx="42" cy="26" r="4" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <circle cx="46" cy="22" r="3" fill="#86efac" stroke="#15803d" stroke-width="1"/>
    <!-- Ramo central -->
    <path d="M32 32V20" stroke="#15803d" stroke-width="2" stroke-linecap="round"/>
    <circle cx="32" cy="14" r="5" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <circle cx="28" cy="10" r="3" fill="#86efac" stroke="#15803d" stroke-width="1"/>
    <circle cx="36" cy="10" r="3" fill="#86efac" stroke="#15803d" stroke-width="1"/>
    <circle cx="32" cy="8" r="2.5" fill="#bbf7d0" stroke="#15803d" stroke-width="1"/>
  </svg>
)}

{type === 'generic' && (
  <svg class={sizes[size]} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Planta genÃ©rica -->
    <path d="M32 56V28" stroke="#15803d" stroke-width="3" stroke-linecap="round"/>
    <path d="M32 40C32 40 18 36 14 24C22 24 32 32 32 40Z" fill="#22c55e" stroke="#15803d" stroke-width="1.5"/>
    <path d="M32 32C32 32 46 28 50 16C42 16 32 24 32 32Z" fill="#4ade80" stroke="#15803d" stroke-width="1.5"/>
    <path d="M32 28C32 28 24 20 24 12C28 12 32 20 32 28Z" fill="#86efac" stroke="#15803d" stroke-width="1.5"/>
    <path d="M32 28C32 28 40 20 40 12C36 12 32 20 32 28Z" fill="#bbf7d0" stroke="#15803d" stroke-width="1.5"/>
  </svg>
)}
