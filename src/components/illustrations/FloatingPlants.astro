  <ellipse cx="32" cy="20" rx="8" ry="10" transform="rotate(30 32 20)" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="1.5"/>
  <!-- Folha centro -->
  <ellipse cx="24" cy="14" rx="6" ry="10" fill="currentColor" fill-opacity="0.35" stroke="currentColor" stroke-width="1.5"/>
