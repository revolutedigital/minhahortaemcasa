---
// Ilustracao principal do Hero - Planta em vaso com estilo moderno
---

<div class="relative w-full h-full">
  <!-- Container principal -->
  <svg viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
    <!-- Background circle -->
    <circle cx="200" cy="200" r="180" fill="url(#bgGradient)" opacity="0.5"/>

    <!-- Vaso -->
    <path d="M140 280H260L245 360H155L140 280Z" fill="url(#potGradient)" stroke="#b5441c" stroke-width="3"/>
    <path d="M135 270H265V285H135V270Z" fill="#db5a21" stroke="#b5441c" stroke-width="3" rx="5"/>

    <!-- Terra no vaso -->
    <ellipse cx="200" cy="280" rx="55" ry="8" fill="#5c4033"/>

    <!-- Caule principal -->
    <path d="M200 280V160" stroke="#15803d" stroke-width="6" stroke-linecap="round"/>

    <!-- Folha grande esquerda -->
    <path d="M200 200C200 200 150 180 130 140C150 140 180 160 200 200Z" fill="url(#leafGradient1)" stroke="#15803d" stroke-width="2"/>
    <path d="M200 200C165 170 145 145 130 140" stroke="#22c55e" stroke-width="1.5" opacity="0.6"/>

    <!-- Folha grande direita -->
    <path d="M200 180C200 180 250 160 270 120C250 120 220 140 200 180Z" fill="url(#leafGradient2)" stroke="#15803d" stroke-width="2"/>
    <path d="M200 180C235 150 255 125 270 120" stroke="#22c55e" stroke-width="1.5" opacity="0.6"/>

    <!-- Folha media esquerda -->
    <path d="M200 230C200 230 165 220 150 190C165 190 185 205 200 230Z" fill="url(#leafGradient1)" stroke="#15803d" stroke-width="2"/>

    <!-- Folha media direita -->
    <path d="M200 220C200 220 235 210 250 180C235 180 215 195 200 220Z" fill="url(#leafGradient2)" stroke="#15803d" stroke-width="2"/>

    <!-- Folha topo -->
    <path d="M200 160C200 160 180 130 170 100C190 100 200 130 200 160Z" fill="url(#leafGradient1)" stroke="#15803d" stroke-width="2"/>
    <path d="M200 160C200 160 220 130 230 100C210 100 200 130 200 160Z" fill="url(#leafGradient2)" stroke="#15803d" stroke-width="2"/>

    <!-- Pequenas folhas/brotos -->
    <circle cx="185" cy="155" r="4" fill="#4ade80"/>
    <circle cx="215" cy="145" r="3" fill="#86efac"/>
    <circle cx="195" cy="175" r="3" fill="#4ade80"/>

    <!-- Gotas de agua decorativas -->
    <path d="M280 200C280 200 275 210 275 215C275 220 280 222 280 222C280 222 285 220 285 215C285 210 280 200 280 200Z" fill="#7dd3fc" opacity="0.7"/>
    <path d="M120 230C120 230 117 237 117 240C117 244 120 245 120 245C120 245 123 244 123 240C123 237 120 230 120 230Z" fill="#7dd3fc" opacity="0.5"/>

    <!-- Sol no canto -->
    <circle cx="320" cy="80" r="25" fill="url(#sunGradient)"/>
    <g stroke="#fde047" stroke-width="3" stroke-linecap="round" opacity="0.8">
      <line x1="320" y1="45" x2="320" y2="35"/>
      <line x1="320" y1="125" x2="320" y2="115"/>
      <line x1="285" y1="80" x2="275" y2="80"/>
      <line x1="365" y1="80" x2="355" y2="80"/>
      <line x1="295" y1="55" x2="288" y2="48"/>
      <line x1="352" y1="112" x2="345" y2="105"/>
      <line x1="295" y1="105" x2="288" y2="112"/>
      <line x1="352" y1="48" x2="345" y2="55"/>
    </g>

    <!-- Gradientes -->
    <defs>
      <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#dcfce7"/>
        <stop offset="100%" stop-color="#fef9c3"/>
      </linearGradient>

      <linearGradient id="potGradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#ea7531"/>
        <stop offset="100%" stop-color="#b5441c"/>
      </linearGradient>

      <linearGradient id="leafGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#22c55e"/>
        <stop offset="100%" stop-color="#15803d"/>
      </linearGradient>

      <linearGradient id="leafGradient2" x1="100%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#4ade80"/>
        <stop offset="100%" stop-color="#16a34a"/>
      </linearGradient>

      <radialGradient id="sunGradient">
        <stop offset="0%" stop-color="#fef08a"/>
        <stop offset="100%" stop-color="#facc15"/>
      </radialGradient>
    </defs>
  </svg>
</div>
