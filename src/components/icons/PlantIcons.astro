---
// Biblioteca de icones SVG personalizados para o tema de plantas
interface Props {
  name: 'leaf' | 'sprout' | 'herb' | 'water' | 'sun' | 'pot' | 'garden' | 'tools' | 'bug' | 'check' | 'arrow';
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { name, class: className = '', size = 'md' } = Astro.props;

const sizes = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-12 h-12'
};
---

{name === 'leaf' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 3C12 3 5 6 5 13C5 17 8 21 12 21C16 21 19 17 19 13C19 6 12 3 12 3Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 3V21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 8C9 10 8 13 8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    <path d="M12 12C15 14 16 17 16 17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
  </svg>
)}

{name === 'sprout' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 22V12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 12C12 12 12 7 7 4C7 9 12 12 12 12Z" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 12C12 12 12 7 17 4C17 9 12 12 12 12Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M8 22H16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
)}

{name === 'herb' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M6 20C6 20 6 14 10 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M10 10C10 10 4 8 4 4C8 4 10 10 10 10Z" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M18 20C18 20 18 12 14 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M14 8C14 8 20 6 20 2C16 2 14 8 14 8Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 22C12 22 12 16 12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 12C12 12 8 10 8 6C12 6 12 12 12 12Z" fill="currentColor" fill-opacity="0.25" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}

{name === 'water' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 2C12 2 5 10 5 15C5 19 8 22 12 22C16 22 19 19 19 15C19 10 12 2 12 2Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M8 15C8 17.2 9.8 19 12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
  </svg>
)}

{name === 'sun' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="4" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="2"/>
    <path d="M12 2V4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 20V22" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M4 12H2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M22 12H20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M6.34 6.34L4.93 4.93" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M19.07 19.07L17.66 17.66" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M17.66 6.34L19.07 4.93" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M4.93 19.07L6.34 17.66" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
)}

{name === 'pot' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M5 12H19L17 21H7L5 12Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M4 12H20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 3V8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 8C12 8 8 6 8 3C12 3 12 8 12 8Z" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 8C12 8 16 6 16 3C12 3 12 8 12 8Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}

{name === 'garden' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="3" y="14" width="18" height="7" rx="1" fill="currentColor" fill-opacity="0.15" stroke="currentColor" stroke-width="2"/>
    <path d="M7 14V10C7 10 7 6 4 4C4 8 7 10 7 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 14V8C12 8 12 4 9 2C9 6 12 8 12 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M12 14V8C12 8 12 4 15 2C15 6 12 8 12 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M17 14V10C17 10 17 6 20 4C20 8 17 10 17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}

{name === 'tools' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M14 5L19 10L10 19L5 19L5 14L14 5Z" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M14 5L16 3C17 2 19 2 20 3C21 4 21 6 20 7L19 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M5 14L10 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
)}

{name === 'bug' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <ellipse cx="12" cy="14" rx="5" ry="6" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2"/>
    <circle cx="12" cy="7" r="3" fill="currentColor" fill-opacity="0.3" stroke="currentColor" stroke-width="2"/>
    <path d="M12 10V20" stroke="currentColor" stroke-width="1.5"/>
    <path d="M7 14H3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M21 14H17" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M5 10L7 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M17 12L19 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M5 18L7 16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M17 16L19 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
)}

{name === 'check' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="9" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="2"/>
    <path d="M8 12L11 15L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}

{name === 'arrow' && (
  <svg class={`${sizes[size]} ${className}`} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
)}
