---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio', icon: 'home' },
  { href: '/plantas', label: 'Plantas', icon: 'leaf' },
  { href: '/problemas', label: 'Ajuda', icon: 'help' },
  { href: '/produtos', label: 'Guias', icon: 'book' },
];

function isActive(href: string) {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<nav class="fixed bottom-0 left-0 right-0 z-50 lg:hidden bg-white/95 backdrop-blur-lg border-t border-gray-200 safe-area-bottom" id="bottom-nav">
  <div class="flex items-center justify-around h-16 px-2">
    {navItems.map((item) => (
      <a
        href={item.href}
        class:list={[
          'flex flex-col items-center justify-center flex-1 h-full px-2 transition-colors relative group',
          isActive(item.href)
            ? 'text-leaf-600'
            : 'text-gray-500 hover:text-leaf-600'
        ]}
      >
        {/* Active indicator */}
        {isActive(item.href) && (
          <span class="absolute top-0 left-1/2 -translate-x-1/2 w-8 h-1 bg-leaf-500 rounded-b-full"></span>
        )}

        {/* Icons */}
        {item.icon === 'home' && (
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        )}
        {item.icon === 'leaf' && (
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
        )}
        {item.icon === 'help' && (
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        )}
        {item.icon === 'book' && (
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        )}

        <span class:list={[
          'text-xs mt-1 font-medium',
          isActive(item.href) ? 'text-leaf-600' : 'text-gray-500'
        ]}>
          {item.label}
        </span>
      </a>
    ))}
  </div>
</nav>

<!-- Spacer for bottom nav -->
<div class="h-16 lg:hidden"></div>

<style>
  /* Safe area for devices with home indicator */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }

  /* Hide on scroll down, show on scroll up */
  #bottom-nav {
    transition: transform 0.3s ease;
  }

  #bottom-nav.hidden-nav {
    transform: translateY(100%);
  }
</style>

<script>
  const bottomNav = document.getElementById('bottom-nav');
  let lastScrollY = window.scrollY;
  let ticking = false;

  function updateNav() {
    const currentScrollY = window.scrollY;

    // Only hide when scrolling down significantly
    if (currentScrollY > lastScrollY + 10 && currentScrollY > 100) {
      bottomNav?.classList.add('hidden-nav');
    } else if (currentScrollY < lastScrollY - 10 || currentScrollY < 100) {
      bottomNav?.classList.remove('hidden-nav');
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateNav);
      ticking = true;
    }
  });
</script>
