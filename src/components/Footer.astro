---
import Logo from './Logo.astro';
import Mascote from './illustrations/Mascote.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  plantas: [
    { href: '/plantas/manjericao', label: 'Manjericão' },
    { href: '/plantas/alecrim', label: 'Alecrim' },
    { href: '/plantas/hortela', label: 'Hortelã' },
    { href: '/plantas/tomate-cereja', label: 'Tomate Cereja' },
    { href: '/plantas/morango', label: 'Morango' },
    { href: '/plantas/pepino', label: 'Pepino' },
    { href: '/plantas/abobrinha', label: 'Abobrinha' },
    { href: '/plantas/acafrao-terra', label: 'Açafrão' },
  ],
  problemas: [
    { href: '/problemas/folhas-amarelas', label: 'Folhas Amarelas' },
    { href: '/problemas/pulgoes', label: 'Pulgões' },
    { href: '/problemas/oidio', label: 'Oídio' },
    { href: '/problemas/podridao-raiz', label: 'Podridão Raiz' },
    { href: '/problemas/lagartas', label: 'Lagartas' },
    { href: '/problemas/formigas', label: 'Formigas' },
  ],
  guias: [
    { href: '/guias/como-germinar-sementes', label: 'Germinar Sementes' },
    { href: '/guias/plantas-para-sombra', label: 'Plantas p/ Sombra' },
    { href: '/guias/ervas-medicinais', label: 'Ervas Medicinais' },
    { href: '/guias/quanto-custa-horta', label: 'Quanto Custa' },
    { href: '/guias/tempo-colheita-plantas', label: 'Tempo de Colheita' },
    { href: '/guias/como-fazer-mudas', label: 'Como Fazer Mudas' },
  ],
  produtos: [
    { href: '/produtos/guia-pragas-completo', label: 'Guia Pragas' },
    { href: '/produtos/guia-hidroponia', label: 'Guia Hidroponia' },
    { href: '/produtos/calendario-plantio', label: 'Calendário Plantio' },
    { href: '/produtos', label: 'Todos os Produtos' },
  ],
};
---

<footer class="bg-gray-900 text-gray-300 relative overflow-hidden">
  <!-- Decorative element -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-leaf-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-earth-500/5 rounded-full blur-3xl"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <div class="flex items-start gap-4 mb-6">
          <Logo size="md" variant="icon" />
          <div>
            <span class="font-bold text-xl text-white block">Horta em Casa</span>
            <span class="text-sm text-leaf-400">Cultive. Colha. Saboreie.</span>
          </div>
        </div>
        <p class="text-gray-400 mb-6 max-w-sm">
          Guias práticos para cultivar sua horta em casa, mesmo em apartamento. Feito para o clima brasileiro.
        </p>

        <!-- Mascote + social proof -->
        <div class="flex items-center gap-4">
          <div class="hidden sm:block">
            <Mascote mood="happy" size="sm" />
          </div>
          <div class="text-sm text-gray-400">
            <span class="text-white font-semibold">+2.500</span> hortas criadas
            <div class="flex items-center gap-1 mt-1 text-sun-400">
              {[1,2,3,4,5].map(() => (
                <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
              ))}
              <span class="text-gray-400 ml-1">4.9/5</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Plantas -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-leaf-500 rounded-full"></span>
          Plantas
        </h4>
        <ul class="space-y-3">
          {footerLinks.plantas.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-leaf-400 hover:translate-x-1 transition-all inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Problemas -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-earth-500 rounded-full"></span>
          Problemas
        </h4>
        <ul class="space-y-3">
          {footerLinks.problemas.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-earth-400 hover:translate-x-1 transition-all inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Guias -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-water-500 rounded-full"></span>
          Guias
        </h4>
        <ul class="space-y-3">
          {footerLinks.guias.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-water-400 hover:translate-x-1 transition-all inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Produtos -->
      <div>
        <h4 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-sun-500 rounded-full"></span>
          Produtos
        </h4>
        <ul class="space-y-3">
          {footerLinks.produtos.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-sun-400 hover:translate-x-1 transition-all inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>

        <!-- CTA -->
        <a href="/produtos" class="mt-6 inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-leaf-600 to-leaf-700 hover:from-leaf-700 hover:to-leaf-800 text-white text-sm font-medium rounded-xl transition-all hover:shadow-lg hover:shadow-leaf-500/20 group">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Ver Guias
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="flex items-center gap-2">
          <p class="text-sm text-gray-500">
            &copy; {currentYear} Horta em Casa.
          </p>
          <span class="text-gray-700">|</span>
          <p class="text-sm text-gray-500">Feito com</p>
          <svg class="w-4 h-4 text-leaf-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
          <p class="text-sm text-gray-500">no Brasil</p>
        </div>
        <div class="flex items-center gap-6">
          <a href="/sobre" class="text-sm text-gray-500 hover:text-gray-400 transition-colors">Sobre</a>
          <a href="/plantas" class="text-sm text-gray-500 hover:text-gray-400 transition-colors">Plantas</a>
          <a href="/problemas" class="text-sm text-gray-500 hover:text-gray-400 transition-colors">Problemas</a>
        </div>
      </div>
    </div>
  </div>
</footer>
