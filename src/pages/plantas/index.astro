---
import Layout from '../../layouts/Layout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import PlantCardIcons from '../../components/illustrations/PlantCardIcons.astro';
import Mascote from '../../components/illustrations/Mascote.astro';

export const prerender = true;

const allPlantas = await getCollection('plantas', ({ data }) => !data.draft);
const sortedPlantas = allPlantas.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const plantIcons: Record<string, 'manjericao' | 'alecrim' | 'hortela' | 'cebolinha' | 'salsinha' | 'generic'> = {
  'manjericao': 'manjericao',
  'alecrim': 'alecrim',
  'hortela': 'hortela',
  'cebolinha': 'cebolinha',
  'salsinha': 'salsinha'
};
---

<Layout
  title="Guias de Plantas e Temperos"
  description="Aprenda a cultivar ervas, temperos e vegetais em casa. Guias especificos para cada tipo de planta."
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-leaf-50 via-white to-earth-50"></div>
    <div class="absolute top-20 left-10 w-72 h-72 bg-leaf-200/30 rounded-full blur-3xl blob-animate"></div>
    <div class="absolute bottom-10 right-10 w-64 h-64 bg-earth-200/20 rounded-full blur-3xl blob-animate" style="animation-delay: -3s;"></div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Content -->
        <div class="flex-1 text-center lg:text-left">
          <nav class="text-sm text-gray-500 mb-4">
            <a href="/" class="hover:text-leaf-600 transition-colors">Inicio</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900 font-medium">Plantas</span>
          </nav>

          <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Plantas e <span class="text-gradient">Temperos</span>
          </h1>

          <p class="text-xl text-gray-600 max-w-xl mb-8">
            Guias detalhados para cultivar cada tipo de erva e tempero em casa. Do plantio a colheita!
          </p>

          <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
            <span class="badge badge-leaf">Ervas aromaticas</span>
            <span class="badge badge-earth">Temperos</span>
            <span class="badge badge-sun">Facil cultivo</span>
          </div>
        </div>

        <!-- Mascote + floating icons -->
        <div class="relative">
          <Mascote mood="excited" size="xl" />

          <!-- Floating plant icons -->
          <div class="absolute -top-4 -left-8 animate-float" style="animation-delay: -1s;">
            <div class="bg-white rounded-2xl shadow-lg p-3">
              <PlantCardIcons type="manjericao" size="sm" />
            </div>
          </div>
          <div class="absolute -top-2 -right-6 animate-float" style="animation-delay: -2s;">
            <div class="bg-white rounded-2xl shadow-lg p-3">
              <PlantCardIcons type="hortela" size="sm" />
            </div>
          </div>
          <div class="absolute -bottom-4 -left-4 animate-float" style="animation-delay: -3s;">
            <div class="bg-white rounded-2xl shadow-lg p-3">
              <PlantCardIcons type="alecrim" size="sm" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Plants Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedPlantas.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPlantas.map((planta, index) => (
            <a
              href={`/plantas/${planta.slug}`}
              class={`group bg-white rounded-3xl border border-gray-100 p-6 hover:shadow-xl hover:border-leaf-200 transition-all card-hover scroll-reveal reveal-delay-${Math.min(index + 1, 5)}`}
            >
              <div class="w-16 h-16 bg-leaf-50 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <PlantCardIcons type={plantIcons[planta.slug] || 'generic'} size="lg" />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-leaf-700 transition-colors">
                {planta.data.title.split(':')[0]}
              </h3>
              <p class="text-gray-500 mb-4 line-clamp-2">{planta.data.description}</p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-400">{planta.data.readTime}</span>
                <span class="flex items-center text-leaf-600 text-sm font-medium group-hover:translate-x-1 transition-transform">
                  Ver guia
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-gray-50 rounded-3xl">
          <Mascote mood="sleeping" size="lg" class="mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Guias de plantas em breve</h3>
          <p class="text-gray-600">Estamos preparando guias incriveis para voce!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-leaf-50 to-earth-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-reveal">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
        Nao sabe por onde comecar?
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Faca nosso quiz rapido e descubra qual planta combina com voce!
      </p>
      <a href="/#quiz" class="btn-primary">
        Fazer o quiz
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</Layout>
