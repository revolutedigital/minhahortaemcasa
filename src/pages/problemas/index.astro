---
import Layout from '../../layouts/Layout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import ContentIllustration from '../../components/illustrations/ContentIllustration.astro';
import ToolsIcon from '../../components/illustrations/ToolsIcon.astro';
import Mascote from '../../components/illustrations/Mascote.astro';

export const prerender = true;

const allProblemas = await getCollection('problemas', ({ data }) => !data.draft);
const sortedProblemas = allProblemas.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout
  title="Problemas Comuns em Hortas"
  description="Solucoes rapidas para pragas, doencas, folhas amarelas e outros problemas comuns em hortas caseiras."
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-earth-50 via-white to-sun-50"></div>
    <div class="absolute top-20 right-10 w-72 h-72 bg-earth-200/30 rounded-full blur-3xl blob-animate"></div>
    <div class="absolute bottom-10 left-10 w-64 h-64 bg-sun-200/20 rounded-full blur-3xl blob-animate" style="animation-delay: -3s;"></div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Content -->
        <div class="flex-1 text-center lg:text-left">
          <nav class="text-sm text-gray-500 mb-4">
            <a href="/" class="hover:text-earth-600 transition-colors">Inicio</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900 font-medium">Problemas</span>
          </nav>

          <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Solucao de <span class="text-gradient-warm">Problemas</span>
          </h1>

          <p class="text-xl text-gray-600 max-w-xl mb-8">
            Diagnostico e solucoes rapidas para os problemas mais comuns em hortas caseiras.
          </p>

          <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
            <span class="badge badge-sun">Folhas amarelas</span>
            <span class="badge badge-earth">Pragas</span>
            <span class="badge badge-water">Rega</span>
          </div>
        </div>

        <!-- Mascote + Tools Icon -->
        <div class="relative">
          <Mascote mood="thinking" size="xl" />

          <!-- Tools floating -->
          <div class="absolute -top-2 -right-8 animate-float bg-white rounded-2xl shadow-lg p-4">
            <ToolsIcon size="w-10 h-10" />
          </div>

          <!-- Question marks floating -->
          <div class="absolute -bottom-2 -left-6 animate-float bg-earth-100 rounded-full w-10 h-10 flex items-center justify-center text-earth-600 font-bold text-xl" style="animation-delay: -2s;">
            ?
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problems Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedProblemas.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedProblemas.map((problema, index) => (
            <a
              href={`/problemas/${problema.slug}`}
              class={`group bg-white rounded-3xl border border-gray-100 p-6 hover:shadow-xl hover:border-earth-200 transition-all card-hover scroll-reveal reveal-delay-${Math.min(index + 1, 5)}`}
            >
              <div class="w-20 h-20 bg-gradient-to-br from-amber-50 to-orange-100 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform overflow-hidden">
                <ContentIllustration slug={problema.slug} category="Problemas" />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-earth-700 transition-colors">
                {problema.data.title.split(':')[0]}
              </h3>
              <p class="text-gray-500 mb-4 line-clamp-2">{problema.data.description}</p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-400">{problema.data.readTime}</span>
                <span class="flex items-center text-earth-600 text-sm font-medium group-hover:translate-x-1 transition-transform">
                  Ver solucao
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-gray-50 rounded-3xl">
          <Mascote mood="sleeping" size="lg" class="mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Solucoes em breve</h3>
          <p class="text-gray-600">Estamos preparando solucoes para os problemas mais comuns!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Help CTA -->
  <section class="py-16 bg-gradient-to-r from-earth-50 to-sun-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-reveal">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
        Precisa de mais ajuda?
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Confira nosso kit completo de solucoes para problemas comuns!
      </p>
      <a href="/produtos/kit-problemas" class="btn-accent">
        Ver Kit de Solucoes
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</Layout>
