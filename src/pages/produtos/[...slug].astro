---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const produtos = await getCollection('produtos');
  return produtos.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const discount = entry.data.originalPrice
  ? Math.round((1 - entry.data.price / entry.data.originalPrice) * 100)
  : 0;

const categoryLabels: Record<string, string> = {
  plantas: 'Guia de Planta',
  problemas: 'Solução de Problema',
  combo: 'Kit Completo',
};
---

<Layout
  title={entry.data.title}
  description={entry.data.description}
>
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="text-sm text-gray-500 mb-8">
        <a href="/" class="hover:text-primary-600">Inicio</a>
        <span class="mx-2">/</span>
        <a href="/produtos" class="hover:text-primary-600">Produtos</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{entry.data.title}</span>
      </nav>

      <!-- Product Header -->
      <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 mb-8 border border-primary-100">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
          <div class="flex-1">
            <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 text-sm font-medium rounded-full mb-4">
              {categoryLabels[entry.data.category] || 'Produto Digital'}
            </span>
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {entry.data.title}
            </h1>
            <p class="text-lg text-gray-600 mb-6">
              {entry.data.description}
            </p>

            <!-- Price -->
            <div class="flex items-baseline gap-4 mb-6">
              {entry.data.originalPrice && (
                <span class="text-lg text-gray-400 line-through">
                  R$ {entry.data.originalPrice}
                </span>
              )}
              <span class="text-4xl font-bold text-primary-600">
                R$ {entry.data.price}
              </span>
              {discount > 0 && (
                <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                  {discount}% OFF
                </span>
              )}
            </div>

            <!-- CTA Button -->
            <a
              href="#comprar"
              class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white rounded-lg font-bold text-lg hover:bg-primary-700 transition-colors"
            >
              Comprar Agora
              <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>

          <!-- Trust badges sidebar -->
          <div class="md:w-64 bg-white rounded-xl p-5 border border-gray-100">
            <h3 class="font-semibold text-gray-900 mb-4">Incluso:</h3>
            <ul class="space-y-3 text-sm">
              <li class="flex items-center gap-2 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Entrega imediata por email
              </li>
              <li class="flex items-center gap-2 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Formato PDF ilustrado
              </li>
              <li class="flex items-center gap-2 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Acesso vitalício
              </li>
              <li class="flex items-center gap-2 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Garantia de 7 dias
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Product Content -->
      <div class="prose prose-lg max-w-none mb-12">
        <Content />
      </div>

      <!-- CTA Section -->
      <section id="comprar" class="bg-primary-600 rounded-2xl p-8 text-center">
        <h2 class="text-2xl font-bold text-white mb-4">
          Garanta seu acesso agora
        </h2>
        <div class="flex items-baseline justify-center gap-4 mb-6">
          {entry.data.originalPrice && (
            <span class="text-lg text-primary-200 line-through">
              R$ {entry.data.originalPrice}
            </span>
          )}
          <span class="text-4xl font-bold text-white">
            R$ {entry.data.price}
          </span>
        </div>
        <a
          href="#"
          data-checkout={entry.slug}
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-leaf-700 rounded-xl font-bold text-lg hover:bg-gray-100 hover:shadow-lg transition-all"
        >
          Comprar Agora - R$ {entry.data.price}
        </a>
        <p class="text-primary-100 text-sm mt-4">
          Pagamento seguro via Kiwify. Cartão, PIX ou boleto.
        </p>
      </section>

      <!-- Guarantee -->
      <div class="mt-8 p-6 bg-gray-50 rounded-xl text-center">
        <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">Garantia de 7 Dias</h3>
        <p class="text-gray-600 text-sm max-w-md mx-auto">
          Se não gostar do material, devolvemos 100% do seu dinheiro em até 7 dias. Sem perguntas.
        </p>
      </div>
    </div>
  </section>
</Layout>
