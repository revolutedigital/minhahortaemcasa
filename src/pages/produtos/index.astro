---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

const allProdutos = await getCollection('produtos');
---

<Layout
  title="Produtos Digitais"
  description="Ebooks, checklists e guias completos para acelerar seu sucesso com hortas em casa."
>
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <nav class="text-sm text-gray-500 mb-4">
          <a href="/" class="hover:text-primary-600">Inicio</a>
          <span class="mx-2">/</span>
          <span class="text-gray-900">Produtos</span>
        </nav>
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Produtos Digitais</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Ebooks, checklists e guias completos para acelerar seu sucesso com hortas.
        </p>
      </div>

      <!-- Products Grid -->
      {allProdutos.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {allProdutos.map((produto) => (
            <div class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow">
              {produto.data.image && (
                <img
                  src={produto.data.image}
                  alt={produto.data.title}
                  class="w-full aspect-video object-cover"
                />
              )}
              <div class="p-6">
                <h3 class="font-bold text-xl text-gray-900 mb-2">{produto.data.title}</h3>
                <p class="text-gray-600 text-sm mb-4">{produto.data.description}</p>
                {produto.data.features && (
                  <ul class="mb-4 space-y-1">
                    {produto.data.features.slice(0, 3).map((feature) => (
                      <li class="text-sm text-gray-600 flex items-center gap-2">
                        <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                )}
                <div class="flex items-center justify-between">
                  <div>
                    {produto.data.originalPrice && (
                      <span class="text-sm text-gray-400 line-through mr-2">
                        R$ {produto.data.originalPrice}
                      </span>
                    )}
                    <span class="text-2xl font-bold text-primary-600">
                      R$ {produto.data.price}
                    </span>
                  </div>
                  <a
                    href={produto.data.checkoutUrl || `/produtos/${produto.slug}`}
                    class="px-4 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors"
                  >
                    Comprar
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-gray-50 rounded-xl">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Produtos em breve</h3>
          <p class="text-gray-600">Estamos preparando materiais incriveis para voce!</p>
        </div>
      )}
    </div>
  </section>
</Layout>
