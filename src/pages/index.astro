---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import CTABox from '../components/CTABox.astro';
import LeadMagnetPopup from '../components/LeadMagnetPopup.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

const allGuias = await getCollection('guias', ({ data }) => !data.draft);
const allPlantas = await getCollection('plantas', ({ data }) => !data.draft);
const allProblemas = await getCollection('problemas', ({ data }) => !data.draft);

const recentArticles = [...allGuias, ...allPlantas, ...allProblemas]
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
---

<Layout title="Horta em Casa" description="Aprenda a cultivar sua propria horta em casa, apartamento ou varanda. Guias praticos, dicas de cultivo e solucoes para problemas comuns.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 via-white to-primary-50 py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-1 bg-primary-100 text-primary-700 text-sm font-medium rounded-full mb-6">
          Seu guia completo de cultivo
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Cultive sua propria
          <span class="text-primary-600"> horta em casa</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Mesmo morando em apartamento, voce pode ter ervas frescas e temperos organicos.
          Guias praticos, passo a passo, para iniciantes e experientes.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/guias/horta-em-apartamento"
            class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
          >
            Comecar Agora
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="#newsletter"
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-gray-700 border border-gray-200 rounded-lg font-semibold hover:bg-gray-50 transition-colors"
          >
            Receber Dicas Gratis
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2">Guias Completos</h3>
          <p class="text-gray-600">Passo a passo detalhado para cada tipo de planta e espaco.</p>
        </div>
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2">Dicas Praticas</h3>
          <p class="text-gray-600">Solucoes testadas para os problemas mais comuns.</p>
        </div>
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2">Para Iniciantes</h3>
          <p class="text-gray-600">Comece do zero, mesmo sem experiencia anterior.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Ultimos Artigos</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Guias praticos e dicas atualizadas para voce cultivar sua horta com sucesso.
        </p>
      </div>

      {recentArticles.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentArticles.map((article) => (
            <ArticleCard
              title={article.data.title}
              description={article.data.description}
              href={`/${article.collection}/${article.slug}`}
              image={article.data.image}
              category={article.data.category}
              readTime={article.data.readTime}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-xl border border-gray-100">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Conteudo em breve</h3>
          <p class="text-gray-600">Estamos preparando guias incriveis para voce!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <CTABox
        title="Checklist Gratuito: 7 Erros que Matam sua Horta"
        description="Descubra os erros mais comuns que iniciantes cometem e como evita-los. Baixe gratis!"
        buttonText="Baixar Agora"
        buttonHref="#newsletter"
        variant="highlight"
        icon="download"
      />
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Explore por Categoria</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/guias" class="group bg-white rounded-xl p-6 border border-gray-100 hover:border-primary-200 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">Guias</h3>
          <p class="text-gray-600 text-sm">Tutoriais completos para montar e manter sua horta.</p>
        </a>
        <a href="/plantas" class="group bg-white rounded-xl p-6 border border-gray-100 hover:border-primary-200 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">Plantas</h3>
          <p class="text-gray-600 text-sm">Guias especificos para cada tipo de erva e tempero.</p>
        </a>
        <a href="/problemas" class="group bg-white rounded-xl p-6 border border-gray-100 hover:border-primary-200 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">Problemas</h3>
          <p class="text-gray-600 text-sm">Solucoes rapidas para pragas, doencas e outros problemas.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section id="newsletter" class="py-16 bg-primary-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Receba dicas exclusivas no seu email
      </h2>
      <p class="text-primary-100 mb-8 max-w-2xl mx-auto">
        Junte-se a milhares de pessoas que estao cultivando suas proprias hortas.
        Receba dicas semanais, novos guias e ofertas exclusivas.
      </p>
      <form id="newsletter-form" class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          name="email"
          placeholder="seu@email.com"
          required
          class="flex-1 px-4 py-3 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-300"
        />
        <button
          type="submit"
          class="px-6 py-3 bg-white text-primary-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          Inscrever-se
        </button>
      </form>
      <p class="text-primary-200 text-sm mt-4">
        Sem spam. Cancele quando quiser.
      </p>
    </div>
  </section>

  <LeadMagnetPopup />
</Layout>

<script>
  const form = document.getElementById('newsletter-form') as HTMLFormElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);

    try {
      const response = await fetch('/api/subscribe', {
        method: 'POST',
        body: JSON.stringify({
          email: formData.get('email'),
          source: 'homepage',
        }),
        headers: {
          'Content-Type': 'application/json',
        },
      });

      if (response.ok) {
        form.innerHTML = '<p class="text-white font-semibold">Obrigado! Verifique seu email.</p>';
      }
    } catch (error) {
      console.error('Subscription error:', error);
    }
  });
</script>
